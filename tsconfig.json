{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "outDir": "dist/esm",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react-jsx",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "hooks": [
        "copy-files"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "demo"
    ]
}